{
  "compilerOptions": {
    "module": "esnext",
    "lib": ["DOM", "ES2015"],
    "types": ["node"],
    "target": "esnext",
    "outDir": "dist",
    "rootDir": ".",
    "sourceMap": true,
    "strict": false,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true
  }
}
